<html>
    <head>
        <title>Homepage</title>
        <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="/public/styles.css" type="text/css">
	    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    </head>
    <body>
        <div style="max-width: 1200px; margin: 60px auto; padding: 10px;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-offset-2 col-xs-8">
                        <% for(var i=0;i<data.length;i++){ %>
                            <div>
                                <div class="bg-primary text-white">
                                    Q<%= i %>. <%= data[i].question %>
                                </div>
                                Your answer:
                                <div id="div<%= i %>" class="text-white">
                                    <%= data[i].answer %>
                                </div>
                                Correct answer:
                                <div class="bg-success text-white">
                                    <%= data[i].correct %>
                                </div>
                                <br>
                            </div>
                        <% }; %>
                    </div>
                </div>
                <div class="col-xs-offset-2 col-xs-8 bg-success">
                    Your score = <%= score %>
                    <a href="/">Go To Home</a>
                </div>
            </div>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        <script>
            $(document).ready(function(){
                var noOfQuestions = parseInt('<%= data.length %>');
                for(i=0;i<noOfQuestions;i++)
                {
                    if(data[i].correct==data[i].answer)
                        $("#div"+i).addClass("bg-success");
                    else
                        $("#div"+i).addClass("bg-danger");
                }
            });
        </script>
    </body>